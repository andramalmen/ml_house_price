{
    "name": "node-service-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for node service",
    "main": "index.js",
    "scripts": {
        "dev": "NODE_ENV=development ts-node ./src/index.ts",
        "dev:watch": "NODE_ENV=development nodemon",
        "start": "NODE_ENV=production node build/src/index.js",
        "checkTable": "ts-node ./src/checkTable.ts",
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint --ignore-path .prettierignore --ext .js,.ts .",
        "format": "prettier --ignore-path .prettierignore --write --loglevel silent '**/*.{ts,js,json}'",
        "format:check": "prettier --check '**/*.{ts,js,json}'",
        "validate": "npm-run-all --parallel format:check lint build",
        "prepare": "husky install"
    },
    "author": "Andra Malmen",
    "license": "ISC",
    "devDependencies": {
        "@types/config": "^0.0.39",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.3.1",
        "@types/pino": "^6.3.9",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "jest-watch-typeahead": "^0.6.4",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.12",
        "npm-run-all": "^4.1.5",
        "pino-pretty": "^5.1.1",
        "prettier": "^2.3.2",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.21.0",
        "@aws-sdk/util-dynamodb": "^3.21.0",
        "config": "^3.3.6",
        "cors": "^2.8.5",
        "csv-writer": "^1.6.0",
        "express": "^4.17.1",
        "express-status-monitor": "^1.2.3",
        "helmet": "^4.6.0",
        "morgan": "^1.10.0",
        "pino": "^6.12.0",
        "typescript-rest": "^3.0.4"
    }
}
